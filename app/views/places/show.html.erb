<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @place.image.url(:medium) %>
        <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td><strong>Title:</strong></td>
                  <td><%= @place.title %></td>
                </tr>
                <tr>
                  <td><strong>Description:</strong></td>
                  <td><%= @place.description %></td>
                </tr>
                <tr>
                  <td><strong>Rating:</strong></td>
                  <td><%= @place.rating %></td>
                </tr>
              </tbody>

            </table>
          <%= link_to 'Write a trip review', new_place_review_path(@place) %> |
          </div>
        </div>
        <div class="col-md-4 col-md-offset-1">
          <h2 class='review_title'>User reviews</h2>
          <% if @reviews.blank? %>
           <h3>No reviews, tell us about it!</h3>
           <%= link_to "Write Review", new_place_review_path(@place), class: "btn btn-danger" %>
          <% else %>
            <% @reviews.each do |review| %>
              <div class="reviews">
                <div class="star-rating" data-score= <%= review.rating %> ></div>
                <p><%= review.comment %></p>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>

  <script>
      $('.star-rating').raty({
        path: '/assets/',
        readOnly: true,
        score: function() {
              return $(this).attr('data-score');
      }
    });
  </script>




