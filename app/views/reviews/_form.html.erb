<%= form_for([@place, @review]) do |f| %>
<% if @review.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@review.errors.count, "error") %>
    prohibited this review from being saved:</h2>

  <ul>
    <% @review.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Sign up</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">

        <div class="field">
          <div id="star-rating"></div>
        </div>
        <div class="field">
          <%= f.label :comment %><br>
          <%= f.text_area :comment, class:"form-control"  %>
        </div>
        <div class="actions">
          <%= f.submit value:"Create review", class:"btn btn-info" %>
        </div>

      </div>


      <script>
        $('#star-rating').raty({path: '/assets/', scoreName: 'review[rating]'});
      </script>
    <% end %>
